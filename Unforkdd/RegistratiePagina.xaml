<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unforkdd.RegistratiePagina"
             Title="Nieuwe Account"
             NavigationPage.HasNavigationBar="True">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Fill" Margin="10">
        <!--username en password-->
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Fill">
            <Label Text="Choose Username" HorizontalOptions="Center"/>
            <Entry x:Name="Username" Placeholder="Username" />
            <Label Text="Choose Password" HorizontalOptions="Center" />
            <Entry x:Name="ChoosPasswordEntry" Placeholder="Password" />
            <Label Text="Repeat Password" HorizontalOptions="Center"/>
            <Entry x:Name="ChoosPasswordEntrySecond" Placeholder="Repeat Password"/>
        </StackLayout>
        <!--button register-->
        <StackLayout HorizontalOptions="CenterAndExpand" >
            <Button Text="Registreren" Clicked="Button_Clicked"/>
        </StackLayout>
    </StackLayout>
    
</ContentPage>