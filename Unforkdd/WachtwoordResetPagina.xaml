<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unforkdd.WachtwoordResetPagina"
             Title="WachtwoordResetPagina">
    
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Fill" Margin="10">
        <!--username-->
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Fill" Margin="0,0,20,0">
            <Label Text="Choose Username" HorizontalOptions="Center"/>
            <Entry x:Name="Username" Placeholder="Username" />
        </StackLayout>
        <!--button reset password-->
        <StackLayout HorizontalOptions="CenterAndExpand" >
            <Button Text="Reset" Clicked="Button_Clicked" Margin="0,10"/>
        </StackLayout>
    </StackLayout>
    
</ContentPage>